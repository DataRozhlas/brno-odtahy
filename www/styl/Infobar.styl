.infobar
  width infobarWidth
  position absolute
  right 0px
  top 0px
  bottom 0px
  background lighten(ColorGreyBg, 80%)
  border-left 1px solid lighten(ColorGreyBg, 30%)
  padding 10px 17px
  overflow hidden
  h2
    color ColorHeading
    font-size 20px
    margin 0px
    .cancel
      position absolute
      top -7px
      right 17px
      font-size 14px
      font-variant small-caps
      font-weight normal
      text-decoration underline
      color #1
      &:hover
        text-decoration none
        cursor pointer
  .subtitle
    display none
    color #6
    font-style italic
    margin-top 6px
  h3
    color black
    float left
    clear left
    font-variant small-caps
    font-weight normal
    margin 20px 0px 16px 0px
    border-bottom 1px solid black
  &.nodata
    h3
    .total
      color #a
    h3
      border-bottom-color #a
    .subtitle
      display block
    .cancel
      visibility hidden
    ol.typy
      height 140px
  .total
    display block
    float left
    width 100%
    margin-bottom -15px
    margin-top 20px
    color #333
    font-variant small-caps
    // line-height 3em
    .value
      float left
      font-size 40px
      font-weight 300
    .suffix
      float left
      margin-top 9px
      line-height 14px
      padding-left 10px
  .histogram-container
    float left
    margin-top 20px
    width 100%
  .histogram
    float left
    width 100%
    height 110px
    margin-bottom 8px
    position relative
    .bar
      float left
      position relative
      cursor pointer
      width 14px
      .legend
        position absolute
        bottom -20px
        font-size 0.7em
        width 100%
        text-align center
      .fill
        background ColorHeading
        position absolute
        bottom 0px
        width 100%
        min-height 1px
        border-right 1px solid lighten(ColorGreyBg, 80%)
        transition height 0.2s
        &.bg
          background #c
    &.time
      .bar
        width (100% / 24)
        height @height
        .legend
          left -50%
        &:first-child .legend
          display none
    &.filtered
      .bar.inactive .fill
        background #ccc
  .calendar-container
    float left
    margin-top 10px
  .calendar
    float left
    clear both
    width 330px
    margin-left -17px
    padding-top 17px
    .month
      float left
      width 110px
      height 70px
      position relative
      .title
        position absolute
        display block
        width 100%
        top -20px
        font-size 10px
        text-align center
        text-transform uppercase
      .month-content
        width 76px
        height 24px
        position relative
        left 17px
        top 10px
        transition transform 0.2s
        .day
          position absolute
          background #c
          width 10px
          height 3px
          cursor pointer
          z-index 1
          transition opacity 0.2s
      &:hover
        .month-content
          transform scale(1.5, 2)
          .day
            width 10.25px
            height 3.25px
            &:hover
              z-index 2
              outline 1px solid rgba(ColorHeadingLink, 0.5)
    &.filtered
      .day
        opacity 0.7
        &.filtered
          opacity 1

